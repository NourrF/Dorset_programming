#include <iostream>
using namespace std;

class Person {
public:
    void introduce() {
        cout << "I am a person." << endl;
    }
};

class Student : public Person {
public:
    void study() {
        cout << "I am studying." << endl;
    }
};

int main() {
    Student student;
    student.introduce();  
    student.study();      

    return 0;
}
